{
    "version": 2,
    "builds": [
      {
        "src": "src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public//*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/auth/login",
        "methods": ["POST"],
        "dest": "/src/server.js"
      },
      {
        "src": "/api/auth/register",
        "methods": ["POST"],
        "dest": "/src/server.js"
      },
      {
        "src": "/api/tasks",
        "methods": ["GET"],
        "dest": "/src/server.js"
      },
      {
        "src": "/api/tasks/create",
        "methods": ["POST"],
        "dest": "/src/server.js"
      },
      {
        "src": "/api/tasks/update",
        "methods": ["PUT"],
        "dest": "/src/server.js"
      },
      {
        "src": "/api/tasks/delete",
        "methods": ["DELETE"],
        "dest": "/src/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/index.html"
      }
    ]
  }